<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"> <!-- âœ… Evita que la barra se meta bajo el notch -->

    <!-- ðŸ”¹ Toolbar superior -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:title="Editar anuncio"
        android:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_back"
        app:navigationContentDescription="Volver"
        android:elevation="4dp"
        android:paddingTop="8dp" /> <!-- âœ… AÃ±ade un pequeÃ±o padding visual -->

    <!-- ðŸ”¹ Contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- ðŸ”¹ Imagen del anuncio -->
            <ImageView
                android:id="@+id/imageEditarAnuncio"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@drawable/borde_redondeado"
                android:contentDescription="Imagen del anuncio"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnCambiarImagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cambiar imagen"
                android:layout_marginBottom="24dp" />

            <!-- ðŸ”¹ Campo descripciÃ³n -->
            <EditText
                android:id="@+id/editDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DescripciÃ³n del anuncio"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:layout_marginBottom="16dp" />

            <!-- ðŸ”¹ Campo telÃ©fono -->
            <EditText
                android:id="@+id/editTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="TelÃ©fono"
                android:inputType="phone"
                android:layout_marginBottom="24dp" />

            <!-- ðŸ”¹ BotÃ³n para guardar cambios -->
            <Button
                android:id="@+id/btnGuardarCambios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar cambios"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
