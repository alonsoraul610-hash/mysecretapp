<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- Imagen del anuncio -->
        <ImageView
            android:id="@+id/imageAnuncio"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Contenido: Localidad, Descripción, Teléfono -->
        <LinearLayout
            android:id="@+id/contenidoAnuncio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            app:layout_constraintStart_toEndOf="@id/imageAnuncio"
            app:layout_constraintTop_toTopOf="@id/imageAnuncio"
            app:layout_constraintBottom_toBottomOf="@id/imageAnuncio"
            app:layout_constraintEnd_toStartOf="@id/btnEliminar"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/textLocalidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Localidad"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción del anuncio"
                android:textSize="14sp"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/textTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teléfono"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="14sp"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- Botón eliminar -->
        <!-- Botón eliminar (mitad inferior) -->
        <!-- Botón editar (mitad superior) -->
        <ImageButton
            android:id="@+id/btnEditar"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_menu"
            android:contentDescription="Editar anuncio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageAnuncio"
            app:layout_constraintBottom_toTopOf="@id/btnEliminar"/>

        <!-- Botón eliminar (mitad inferior) -->
        <ImageButton
            android:id="@+id/btnEliminar"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_menu"
            android:contentDescription="Eliminar anuncio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnEditar"
            app:layout_constraintBottom_toBottomOf="@id/imageAnuncio"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
